<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".display.transitions.methodboard.Contents">

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/fragment_trans_method_board_contents"
        android:scrollbars="vertical"
        tools:text="Contents"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:layout_marginBottom="8dp"></View>

            <LinearLayout
                android:layout_gravity="end
"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="글 번호"/>

                <TextView
                    android:id="@+id/fragment_trans_method_board_contents_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="게시자"/>

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/fragment_trans_method_board_contents_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="User Id"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="게시 일자"/>

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/fragment_trans_method_board_contents_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="2010-10-10"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>